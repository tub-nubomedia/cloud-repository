{  
    "name":"Cloud Repository",
    "vendor":"TUB",
    "version":"1.0",
    "vnfd":[  
        {  
            "vendor":"TUB",
            "version":"0.1",
            "name":"mongo-router",
            "type":"router",
            "endpoint":"generic",
            "vdu":[  
                {  
                    "vm_image":[  
                        "ubuntu-cloud-64bit"
                    ],
                    "vimInstanceName":"vim-instance",
                    "scale_in_out":2,
                    "vnfc":[  
                        {  
                            "exposed":true,
                            "connection_point":[  
                                {  
                                    "virtual_link_reference":"internal_nubomedia"
                                }
                            ]
                        }
                    ]
                }
            ],
            "virtual_link":[  
                {  
                    "name":"internal_nubomedia"
                }
            ],
            "lifecycle_event":[  
                {  
                    "event":"INSTANTIATE",
                    "lifecycle_events":[  
                        "install.sh"
                    ]
                },
                {  
                    "event":"CONFIGURE",
                    "lifecycle_events":[  
                        "config_start-router.sh",
                        "shard_configure.sh"
                    ]
                }
            ],
            "deployment_flavour":[  
                {  
                    "flavour_key":"m1.small"
                }
            ],
            "vnfPackage":{  
                "scriptsLink":"https://github.com/tub-nubomedia/cloud-repository-scripts.git"
            }
        },
        {  
            "vendor":"TUB",
            "version":"0.1",
            "name":"mongo-shard",
            "type":"shard",
            "endpoint":"generic",
            "configurations":{  
                "name":"shard_config",
                "configurationParameters":[  
                    {  
                        "confKey":"smallfiles",
                        "value":"true"
                    }
                ]
            },
            "vdu":[  
                {  
                    "vm_image":[  
                        "ubuntu-cloud-64bit"
                    ],
                    "vimInstanceName":"vim-instance",
                    "scale_in_out":2,
                    "vnfc":[  
                        {  
                            "connection_point":[  
                                {  
                                    "virtual_link_reference":"internal_nubomedia"
                                }
                            ]
                        }
                    ]
                }
            ],
            "virtual_link":[  
                {  
                    "name":"internal_nubomedia"
                }
            ],
            "lifecycle_event":[  
                {  
                    "event":"INSTANTIATE",
                    "lifecycle_events":[  
                        "install.sh",
                        "start-shard.sh"
                    ]
                }
            ],
            "deployment_flavour":[  
                {  
                    "flavour_key":"m1.small"
                }
            ],
            "vnfPackage":{  
                "scriptsLink":"https://github.com/tub-nubomedia/cloud-repository-scripts.git"
            }
        },
        {  
            "vendor":"TUB",
            "version":"0.1",
            "name":"mongo-config",
            "type":"config",
            "endpoint":"generic",
            "configurations":{  
                "name":"config_config",
                "configurationParameters":[  
                    {  
                        "confKey":"smallfiles",
                        "value":"true"
                    }
                ]
            },
            "vdu":[  
                {  
                    "vm_image":[  
                        "ubuntu-cloud-64bit"
                    ],
                    "vimInstanceName":"vim-instance",
                    "scale_in_out":2,
                    "vnfc":[  
                        {  
                            "connection_point":[  
                                {  
                                    "virtual_link_reference":"internal_nubomedia"
                                }
                            ]
                        }
                    ]
                }
            ],
            "virtual_link":[  
                {  
                    "name":"internal_nubomedia"
                }
            ],
            "lifecycle_event":[  
                {  
                    "event":"INSTANTIATE",
                    "lifecycle_events":[  
                        "install.sh",
                        "start-config.sh"
                    ]
                }
            ],
            "deployment_flavour":[  
                {  
                    "flavour_key":"m1.small"
                }
            ],
            "vnfPackage":{  
                "scriptsLink":"https://github.com/tub-nubomedia/cloud-repository-scripts.git"
            }
        }
    ],
    "vld":[  
        {  
            "name":"internal_nubomedia"
        }
    ],
    "vnf_dependency":[  
        {  
            "source":{  
                "name":"mongo-shard"
            },
            "target":{  
                "name":"mongo-router"
            },
            "parameters":[  
                "internal_nubomedia"
            ]
        },
        {  
            "source":{  
                "name":"mongo-config"
            },
            "target":{  
                "name":"mongo-router"
            },
            "parameters":[  
                "internal_nubomedia"
            ]
        }
    ]
}
